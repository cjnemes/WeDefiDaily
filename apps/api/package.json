{
  "name": "@wedefidaily/api",
  "version": "0.1.0",
  "private": true,
  "description": "API backend for WeDefiDaily.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "lint": "eslint \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "node --require ../../scripts/register-vite-shim.cjs ../../node_modules/vitest/vitest.mjs",
    "test:run": "node --require ../../scripts/register-vite-shim.cjs ../../node_modules/vitest/vitest.mjs run",
    "test:unit": "node --require ../../scripts/register-vite-shim.cjs ../../node_modules/vitest/vitest.mjs --config vitest.unit.config.ts",
    "test:unit:run": "node --require ../../scripts/register-vite-shim.cjs ../../node_modules/vitest/vitest.mjs run --config vitest.unit.config.ts",
    "test:integration": "node --require ../../scripts/register-vite-shim.cjs ../../node_modules/vitest/vitest.mjs --config vitest.config.ts",
    "test:rigorous": "node --require ../../scripts/register-vite-shim.cjs ../../node_modules/vitest/vitest.mjs run --config vitest.config.rigorous.ts --reporter=verbose",
    "test:mock-detection": "RUN_DB_TESTS=true node --require ../../scripts/register-vite-shim.cjs ../../node_modules/vitest/vitest.mjs run src/test/mock-detection-validation.test.ts",
    "test:live-apis": "RUN_LIVE_API_TESTS=true DATABASE_URL=postgresql://wedefi:replace-with-strong-password@localhost:5432/wedefidaily_test node --require ../../scripts/register-vite-shim.cjs ../../node_modules/vitest/vitest.mjs run src/test/live-integration-validation.test.ts",
    "test:production-validation": "RUN_LIVE_API_TESTS=true RUN_DB_TESTS=true node --require ../../scripts/register-vite-shim.cjs ../../node_modules/vitest/vitest.mjs run src/test/data-source-authentication.test.ts",
    "prisma:generate": "prisma generate",
    "prisma:db:push": "dotenv -e ../../.env -- prisma db push",
    "prisma:migrate:dev": "dotenv -e ../../.env -- prisma migrate dev",
    "prisma:migrate:deploy": "dotenv -e ../../.env -- prisma migrate deploy",
    "prisma:studio": "dotenv -e ../../.env -- prisma studio",
    "prisma:validate": "dotenv -e ../../.env.example -- prisma validate",
    "sync:balances": "dotenv -e ../../.env -- tsx src/jobs/sync-balances.ts",
    "sync:governance": "dotenv -e ../../.env -- tsx src/jobs/sync-governance.ts",
    "sync:rewards": "dotenv -e ../../.env -- tsx src/jobs/sync-rewards.ts",
    "sync:gammaswap": "dotenv -e ../../.env -- tsx src/jobs/sync-gammaswap.ts",
    "sync:performance": "dotenv -e ../../.env -- tsx src/jobs/sync-performance.ts",
    "calculate:performance": "dotenv -e ../../.env -- tsx src/jobs/calculate-performance.ts",
    "calculate:risk-analytics": "dotenv -e ../../.env -- tsx src/jobs/calculate-risk-analytics.ts",
    "process:alerts": "dotenv -e ../../.env -- tsx src/jobs/process-alerts.ts",
    "generate:digest": "dotenv -e ../../.env -- tsx src/jobs/generate-digest.ts",
    "check:price-thresholds": "dotenv -e ../../.env -- tsx src/jobs/check-price-thresholds.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@prisma/client": "^6.16.2",
    "axios": "^1.12.2",
    "decimal.js": "^10.4.3",
    "ethers": "^6.15.0",
    "fastify": "^5.1.0",
    "fastify-plugin": "^5.0.1",
    "node-cache": "^5.1.2",
    "pino": "^9.12.0",
    "pino-pretty": "^13.1.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/node": "^20.14.12",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.13.0",
    "globals": "^15.9.0",
    "prisma": "^6.0.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  }
}
